
<% const searchInput = typeof input !== 'undefined' ? input : ''; %>
<nav class="navbar navbar-expand-md sticky-top custom-mobile-container">
  <div class="container-fluid d-md-block">
    <!-- Mobile Layout Only: Use Flexbox to Align Items -->
    <div
      class="d-flex d-md-none justify-content-between align-items-center w-100"
    >
      <!-- [1] Navbar Brand: Aligned left on mobile -->
      <a class="navbar-brand d-flex align-items-center gap-2" href="/listings">
        <i class="fa-regular fa-compass"></i>
        <span>WanderLust</span>
      </a>

      <!-- [3] Navbar Toggler: Aligned right on mobile -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

    <!-- [2] Mobile Search Bar: Centered below the brand and toggler -->
    <div class="navbar-nav ms-auto d-md-none mt-2">
      <form
        class="d-flex justify-content-center align-items-center w-100"
        action="/listings/search"
        method="GET"
      >
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          name="q"
          value="<%= searchInput %>"
          style="
            flex-grow: 1;
            max-width: 75%;
            height: 40px;
            padding: 0.375rem 0.75rem;
            border-radius: 8px;
          "
        />
        <div
          class="alignment"
          style="height: 40px; display: flex; align-items: center"
        >
          <button
            class="btn btn-search"
            type="submit"
            style="
              height: 100%; /* Match input height */
              padding: 0.375rem 1.25rem; /* Increase padding for bigger button */
              display: flex;
              justify-content: center;
              align-items: center;
              border-radius: 8px;
              background-color: #fe424d;
              color: white;
              font-weight: bold;
              width: 100%;
              transition: background-color 0.3s ease, transform 0.2s ease;
            "
            onmouseover="this.style.backgroundColor='#dc3545'; this.style.transform='scale(1.05)';"
            onmouseout="this.style.backgroundColor='#fe424d'; this.style.transform='scale(1)';"
          >
            <i
              class="fa-solid fa-magnifying-glass search-icon"
              style="font-size: 1.2rem"
            ></i>
            <span class="d-none d-sm-inline ms-2">Search</span>
          </button>
        </div>
      </form>
    </div>

    <!-- Collapsible Content for Mobile -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Home</a>
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Desktop Search Bar: Hidden on mobile screens -->
      <div class="navbar-nav ms-auto d-none d-md-flex">
        <form class="d-flex" action="/listings/search" method="GET">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search"
            name="q"
            value="<%= searchInput %>"
          />
          <div>
            <button class="btn btn-search btn-danger" type="submit">
              <i class="fa-solid fa-magnifying-glass search-icon"></i> Search
            </button>
          </div>
        </form>
      </div>

      <!-- Account Links -->
      <div class="navbar-nav ms-auto mt-2 mb-2">
        <a class="nav-link" href="/listings/new">Airbnb your Home</a>
        <% if (!currUser) { %>
        <a class="nav-link" href="/signup"><b>Signup</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if (currUser) { %>
        <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
