<% layout("/layouts/boilerplate") %>

<body>
  <form
    action="/listings/<%= listing._id%>?_method=PUT"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <form action="/listings" method="post">
          <h3>Edit this Listing</h3>
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="listing[title]"
              class="form-control"
              id="title"
              required
              placeholder="Enter title"
              value="<%= listing.title %>"
            />
            <div class="valid-feedback">title Looks good!</div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="listing[description]"
              class="form-control"
              id="description"
              cols="30"
              rows="10"
              placeholder="Enter description"
              required
            >
<%= listing.description %></textarea
            >
            <div class="invalid-feedback">
              please enter a short decriptions!
            </div>
          </div>
          <div class="mb-3">
            <select
              class="form-select form-select-sm"
              aria-label="Small select example"
              name="listing[category]"
              required
            >
              <option selected><%=listing.category%></option>
              <option value="trending">trending</option>
              <option value="rooms">rooms</option>
              <option value="iconic-cities">iconic-cities</option>
              <option value="mountains">mountains</option>
              <option value="castles">castles</option>
              <option value="amazing-pools">amazing-pools</option>
              <option value="camping">camping</option>
              <option value="farms">farms</option>
              <option value="arctic">arctic</option>
            </select>
          </div>
          Original listing Image <br />
          <img src="<%= originalImageUrl %>" alt="" />
          <div class="mb-3"></div>
          <div class="mb-3">
            <label class="form-label"
              >Upload New Image
              <input type="file" name="listing[image]" class="form-control"
            /></label>
          </div>
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price</label>

              <input
                type="number"
                placeholder="Enter price"
                class="form-control"
                name="listing[price]"
                id="price"
                value="<%= listing.price %>"
                required
              />
              <div class="invalid-feedback">please enter a valid price</div>
            </div>
            <div class="mb-3 col-md-8">
              <label for="location" class="form-label">Location</label>

              <input
                type="text"
                name="listing[location]"
                class="form-control"
                id="location"
                placeholder="Enter location"
                value="<%= listing.location %>"
                required
              />
              <div class="invalid-feedback">location should be valid</div>
            </div>
          </div>
          <div class="mb-3">
            <label for="country" class="form-label">Country</label>

            <input
              type="text"
              name="listing[country]"
              class="form-control"
              id="country"
              placeholder="Enter country"
              value="<%= listing.country %>"
              required
            />
            <div class="invalid-feedback">Please Enter the country name</div>
          </div>
          <button class="btn btn-dark edit-btn mt-3">Confirm changes</button>
          <br /><br />
        </form>
      </div>
    </div>
  </form>
</body>
